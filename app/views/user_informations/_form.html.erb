  <div id="main">
    <div class="container-fluid">
      <div class="page-header">
        <div class="pull-left">
          <h1>修改个人信息</h1>
        </div>
      </div>
      <div class="row-fluid" id='render_user_information'>
        <div class="span12">
          <div class="box box-color box-bordered">
            <div class="box-title">
              <h3>
                <i class="icon-user"></i>
                基本信息
              </h3>
            </div>
            <div class="box-content nopadding">
              <ul class="tabs tabs-inline tabs-top">
                <li class='active'>
                <a href="#profile" data-toggle='tab'><i class="icon-user"></i> Profile</a>
                </li>
                <li>
                <a href="#notifications" data-toggle='tab'><i class="icon-bullhorn"></i> Notifications</a>
                </li>
                <li>
                <a href="#security" data-toggle='tab'><i class="icon-lock"></i> Security</a>
                </li>
              </ul>
              <div class="tab-content padding tab-content-inline tab-content-bottom">
                <div class="tab-pane active" id="profile">
                  <%=form_for @user_information ,:html=>{:class =>"form-horizontal", :multipart => true, :remote => true} do |f| %>
                    <div class="row-fluid">
                      <div class="span2">
                        <head>个人头像:</head> </br></br>
                        <div class="fileupload fileupload-new" data-provides="fileupload">
                          <div class="fileupload-new thumbnail" style="max-width: 200px; max-height: 150px;"><img src="/assets/demo/user-1.jpg" /></div>
                          <div class="fileupload-preview fileupload-exists thumbnail" style="max-width: 200px; max-height: 150px; line-height: 20px;"></div>
                          <div>
                            <span class="btn btn-file"><span class="fileupload-new">选择头像</span><span class="fileupload-exists">修改</span><input type="file" name='imagefile' /></span>
                            <a href="#" class="btn fileupload-exists" data-dismiss="fileupload">移除</a>
                          </div>
                        </div>
                    </div>
                    <div class="span10">
                        <div class="control-group">
                          <label for="name" class="control-label right">姓名:</label>
                          <div class="controls">
                            <%= f.text_field :name  ,:class=>'input-xlarge'%>
                          </div>
                        </div>

                        <div class="control-group">
                          <label for="email" class="control-label right">年龄:</label>
                          <div class="controls">
                            <%= f.text_field :age ,:class=>"spinner input-mini"%>
                          </div>
                        </div>

                        <div class="control-group">
                          <label for="email" class="control-label right">性别:</label>
                          <div class="controls">
                            <%= f.radio_button :sex,'boy' %>男
                            <%= f.radio_button :sex ,'girl' %>女
                            <%= f.radio_button :sex,'unknow' %>不明
                          </div>
                        </div>

                        <div class="control-group">
                          <label for="email" class="control-label right">生日:</label>
                          <div class="controls">
                            <%= f.text_field :birth,:class=>'datepicker' %>
                          </div>
                        </div>

                        <div class="control-group">
                          <label for="pw" class="control-label right">婚姻状况:</label>
                          <div class="controls">
                            <%= f.select :marry ,UserInformation.get_marry_select_options%>
                          </div>
                        </div>

                        <div class="control-group">
                          <label for="name" class="control-label right">个人技能:</label>
                          <div class="controls">
                            <%= @user_information.tags%>
                            <%= f.text_field :tags,:class=>"tagsinput", :value=>@user_information.tags%>
                          </div>
                        </div>

                        <div class="control-group">
                          <label for="country" class="control-label right">国籍:</label>
                          <div class="controls">
                            <%= f.select :country,UserInformation.get_country_select_options, {'data-placeholder'=>"Please select something"},:class=>'select2-me input-large'%>
                          </select>
                          </div>
                        </div>

                        <div class="control-group">
                          <label for="pw" class="control-label right">电话:</label>
                          <div class="controls">
                            <%= f.text_field :phone %>
                          </div>
                        </div>

                        <div class="control-group">
                          <label for="pw" class="control-label right">QQ:</label>
                          <div class="controls">
                            <%= f.text_field :qq%>
                          </div>
                        </div>

                        <div class="control-group">
                          <label for="pw" class="control-label right">个人地址:</label>
                          <div class="controls">
                            <%= f.text_field :address%>
                          </div>
                        </div>

                        <div class="control-group">
                          <label for="pw" class="control-label right">个性说明:</label>
                          <div class="controls">
                            <%= f.text_field :individuality_explanation%>
                          </div>
                        </div>

                        <div class="control-group">
                          <label for="pw" class="control-label right">自我介绍:</label>
                          <div class="controls">
                            <%= f.kindeditor :introduce %>
                          </div>
                        </div>

                        <div class="form-actions">
                          <input type="submit" class='btn btn-primary' value="确定">
                          <input type="reset" class='btn' value="Discard changes">
                        </div>
                      </div>
                    </div>
                  <% end %>
                </form>
                </div>
                <div class="tab-pane" id="notifications">
                  <form action="#" class="form-horizontal">
                    <div class="control-group">
                      <label for="asdf" class="control-label">Email notifications</label>
                      <div class="controls">
                        <label class="checkbox"><input type="checkbox" name="asdf"> Send me security emails</label>
                        <label class="checkbox"><input type="checkbox" name="asdf"> Send system emails</label>
                      </div>
                    </div>
                    <div class="control-group">
                      <label for="asdf" class="control-label">Email for notifications</label>
                      <div class="controls">
                        <select name="email" id="email">
                          <option value="1">asdf@blasdas.com</option>
                        </select>
                      </div>
                    </div>
                    <div class="form-actions">
                      <input type="submit" class='btn btn-primary' value="Save">
                      <input type="reset" class='btn' value="恢复默认">
                    </div>
                  </form>
                </div>
                <div class="tab-pane" id="security">
                  <form action="#" class="form-horizontal">
                    <div class="control-group">
                      <label for="asdf" class="control-label">Disable account for</label>
                      <div class="controls">
                        <select name="email" id="email">
                          <option value="1">1 week</option>
                        </select>
                      </div>
                    </div>
                    <div class="control-group">
                      <label for="asdf" class="control-label">Lock account?</label>
                      <div class="controls">
                        <a href="more-locked.html" class="btn btn-danger">Lock account now</a>
                      </div>
                    </div>
                    <div class="form-actions">
                      <input type="submit" class='btn btn-primary' value="Save">
                      <input type="reset" class='btn' value="Discard changes">
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

