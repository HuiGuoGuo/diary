  <div id="main">
    <div class="container-fluid">
      <div class="page-header">
        <div class="pull-left">
          <h1>个人信息</h1>
        </div>
      </div>
      <div class="row-fluid">
        <div class="span12">
          <div class="box box-color box-bordered">
            <div class="box-title">
              <h3>
                <i class="icon-user"></i>
                基本信息
              </h3>
            </div>
            <div class="box-content nopadding">
              <ul class="tabs tabs-inline tabs-top">
                <li class='active'>
                <a href="#profile" data-toggle='tab'><i class="icon-user"></i> Profile</a>
                </li>
                <li>
                <a href="#notifications" data-toggle='tab'><i class="icon-bullhorn"></i> Notifications</a>
                </li>
                <li>
                <a href="#security" data-toggle='tab'><i class="icon-lock"></i> Security</a>
                </li>
              </ul>
              <div class="tab-content padding tab-content-inline tab-content-bottom">
                <div class="tab-pane active form-horizontal" id="profile">

                    <div class="row-fluid">
                      <div class="span2">
                        <head>个人头像:</head> </br></br>
                        <% if @user_information.attachment_image%>
                          <img src="<%= @user_information.attachment_image.attachment_image.try(:url)%>" width="84px" height="84px">
                        <%end%>
                      </div>
                      <div class='pull-right'>
                        <%=link_to  '修改',edit_user_information_path(@user_information)%>
                        </div>
                      <div class="span10">
                        <div class="control-group">
                          <label for="name" class="control-label right">姓名:</label>
                          <div class="controls">
                            <%=@user_information.try(:name)%>
                          </div>
                        </div>

                        <div class="control-group">
                          <label for="email" class="control-label right">年龄:</label>
                          <div class="controls">
                            <%=@user_information.try(:age)%>
                          </div>
                        </div>

                        <div class="control-group">
                          <label for="email" class="control-label right">性别:</label>
                          <div class="controls">
                            <%=@user_information.try(:sex)%>
                          </div>
                        </div>

                        <div class="control-group">
                          <label for="email" class="control-label right">生日:</label>
                          <div class="controls">
                            <%=@user_information.try(:birth)%>
                          </div>
                        </div>

                        <div class="control-group">
                          <label for="pw" class="control-label right">婚姻状况:</label>
                          <div class="controls">
                            <%= UserInformation::MARRY[@user_information.try(:marry)]%>
                          </div>
                        </div>

                        <div class="control-group">
                          <label for="name" class="control-label right">个人技能:</label>
                          <div class="controls">
                            <%=  @user_information.try(:tags)%>
                          </div>
                        </div>

                        <div class="control-group">
                          <label for="country" class="control-label right">国籍:</label>
                          <div class="controls">
                            <%=UserInformation::COUNTRY[@user_information.try(:country)]%>
                          </select>
                        </div>
                      </div>

                      <div class="control-group">
                        <label for="pw" class="control-label right">电话:</label>
                        <div class="controls">
                            <%=@user_information.try(:phone )%>
                        </div>
                      </div>

                      <div class="control-group">
                        <label for="pw" class="control-label right">QQ:</label>
                        <div class="controls">
                            <%=@user_information.try(:qq )%>
                        </div>
                      </div>

                      <div class="control-group">
                        <label for="pw" class="control-label right">个人地址:</label>
                        <div class="controls">
                            <%=@user_information.try(:address )%>
                        </div>
                      </div>

                      <div class="control-group">
                        <label for="pw" class="control-label right">个性说明:</label>
                        <div class="controls">
                            <%=@user_information.try(:individuality_explanation )%>
                        </div>
                      </div>

                      <div class="control-group">
                        <label for="pw" class="control-label right">自我介绍:</label>
                        <div class="controls">
                            <%=@user_information.try(:introduce  )%>
                        </div>
                      </div>

                      <div class="form-actions">
                      </div>
                    </div>
                  </div>
            </div>
            <div class="tab-pane" id="notifications">
              <form action="#" class="form-horizontal">
                <div class="control-group">
                  <label for="asdf" class="control-label">Email notifications</label>
                  <div class="controls">
                    <label class="checkbox"><input type="checkbox" name="asdf"> Send me security emails</label>
                    <label class="checkbox"><input type="checkbox" name="asdf"> Send system emails</label>
                  </div>
                </div>
                <div class="control-group">
                  <label for="asdf" class="control-label">Email for notifications</label>
                  <div class="controls">
                    <select name="email" id="email">
                      <option value="1">asdf@blasdas.com</option>
                    </select>
                  </div>
                </div>
                <div class="form-actions">
                  <input type="submit" class='btn btn-primary' value="Save">
                  <input type="reset" class='btn' value="Discard changes">
                </div>
              </form>
            </div>
            <div class="tab-pane" id="security">
              <form action="#" class="form-horizontal">
                <div class="control-group">
                  <label for="asdf" class="control-label">Disable account for</label>
                  <div class="controls">
                    <select name="email" id="email">
                      <option value="1">1 week</option>
                    </select>
                  </div>
                </div>
                <div class="control-group">
                  <label for="asdf" class="control-label">Lock account?</label>
                  <div class="controls">
                    <a href="more-locked.html" class="btn btn-danger">Lock account now</a>
                  </div>
                </div>
                <div class="form-actions">
                  <input type="submit" class='btn btn-primary' value="Save">
                  <input type="reset" class='btn' value="Discard changes">
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
