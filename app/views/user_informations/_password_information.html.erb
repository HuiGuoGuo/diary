
<%= form_for :user, url:  user_registration_path(id:@user.id), html: { :method => :put,:class =>"form-horizontal" } do |f| %>

  <div class="control-group">
    <label for="pw" class="control-label right">用户名:</label>
    <div class="controls">
      <%= f.text_field :username, autofocus: true %>
    </div>
  </div>
  <hr/>

  <div class="control-group">
    <label for="pw" class="control-label right">密码:</label>
    <div class="controls">
      <%= f.password_field :password, autocomplete: "off" %>
    </div>
  </div>
  <hr/>

  <div class="control-group">
    <label for="pw" class="control-label right">确认密码:</label>
    <div class="controls">
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>
  </div>


  <div class="form-actions">
    <%= f.submit "确定",:class => 'btn btn-small btn-primary' %>
  </div>
<%end%>

