<div class ='margin_every'>

  <h2><%= params[:audit] == 'restart' ? '请重新登录' : '登录'%></h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>


    <div class="field">

      <%= f.label :'用户名'%><br />
      <%= f.text_field:username, autofocus: 'off' %>

    </div>
    <div class="field">
      <%= f.label :'密码'%><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :'记住登录状态' %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "登录" ,:class => 'btn btn-small btn-primary'%>
    </div>
  <% end %>
</div>
